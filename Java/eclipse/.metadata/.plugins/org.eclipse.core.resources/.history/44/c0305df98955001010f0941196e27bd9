package Looping;

import java.util.Scanner;

public class ReverseNo {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		System.out.println("Enter the numbers");
        int n=scan.nextInt();
        
        int r=0;
        
        while(n>0)
        	{
        	r=n%10;
        	System.out.print(r);
        	n=n/10;
        	}
	}

}
